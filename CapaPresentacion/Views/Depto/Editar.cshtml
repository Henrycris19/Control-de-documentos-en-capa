@model CapaEntidades.departamentos

@{
    ViewBag.Title = "Editar departamento";
}


<form id="frmEmpleado" action="@Url.Action("Editar", "Depto")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-register">
        <h4>Editar departamento</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "" })

        @Html.HiddenFor(model => model.iddepto)

        <div class="">
            <label class="label">Nombre depto</label>
            <div class="">
                <input type="text" class="controls" name="nombredepto"
                       value="@Model.nombredepto" placeholder="Ingrese nombre del depto" required />
            </div>
        </div>

        <div class="">
            <div class="">
                <input type="submit" value="Guardar cambios" class="botons" onclick="aceptar()" />
            </div>
        </div>
        <div>
            @Html.ActionLink("Volver", "menu", "Usuario")
        </div>
    </div>
</form>

@section Scripts {
    <script>
        function aceptar() {
            alert("Cambios realizados.");
        }
    </script>
    @Scripts.Render("~/bundles/jqueryval")

}
